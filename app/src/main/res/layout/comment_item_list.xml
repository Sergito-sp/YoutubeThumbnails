<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingTop="2dp" android:paddingBottom="0dp">

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@android:color/background_light"
            android:id="@+id/imgCommentAuthorAvatar"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="15dp"/>
    <TextView
            android:id="@+id/txtCommentAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Author"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/imgCommentAuthorAvatar" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imgCommentAuthorAvatar" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgCommentAuthorAvatar" android:layout_marginTop="5dp"/>
    <TextView
            android:id="@+id/txtCommentText"
            tools:text="Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:inputType="textMultiLine"
            android:textColor="@android:color/black"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/imgCommentAuthorAvatar" android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp"/>
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="0.3dp"
            android:background="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="2dp"
            android:layout_marginEnd="15dp" android:layout_marginStart="15dp"/>
</android.support.constraint.ConstraintLayout>